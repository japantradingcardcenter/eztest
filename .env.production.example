# Production Environment Configuration for EzTest
# Copy this file to .env and fill in your production values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL connection string for production
# IMPORTANT: Use strong passwords in production!
DATABASE_URL="postgresql://eztest:CHANGE_THIS_PASSWORD@postgres:5432/eztest?schema=public"

# PostgreSQL Docker Configuration
POSTGRES_USER=eztest
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=eztest
DB_PORT=5432

# ==========================================
# NEXTAUTH CONFIGURATION
# ==========================================
# CRITICAL: Generate a secure random secret!
# Run: openssl rand -base64 32
NEXTAUTH_SECRET="CHANGE_ME_RUN_openssl_rand_-base64_32"

# Your production domain URL
NEXTAUTH_URL="https://your-domain.com"

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
APP_URL="https://your-domain.com"
APP_PORT=3000
NODE_ENV=production

# ==========================================
# DEFAULT ADMIN ACCOUNT
# ==========================================
# IMPORTANT: Change password after first login!
ADMIN_EMAIL="admin@your-domain.com"
ADMIN_PASSWORD="CHANGE_THIS_STRONG_PASSWORD"
ADMIN_NAME="System Administrator"

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# ==========================================
# ATTACHMENTS FEATURE
# ==========================================
# Enable or disable file attachments feature
# Set to true to show attachment buttons (default: false)
ENABLE_ATTACHMENTS=false

# ==========================================
# DATABASE SEEDING
# ==========================================
# Set to true only on first deployment to seed initial data
# Set to false after initial setup
SEED_DATABASE=true

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
# Required for password reset functionality
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@your-domain.com

# ==========================================
# MONITORING & LOGGING (Optional)
# ==========================================
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info
