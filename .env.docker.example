# Docker Environment Configuration
# This file is used when running with docker-compose

# Database - Use docker service name 'postgres'
DATABASE_URL="postgresql://eztest:eztest_password@postgres:5432/eztest?schema=public"

# PostgreSQL Configuration
POSTGRES_USER=eztest
POSTGRES_PASSWORD=eztest_password
POSTGRES_DB=eztest
DB_PORT=5432

# Application
NODE_ENV="production"
APP_URL="http://localhost:3000"
APP_PORT=3000

# NextAuth / Authentication
NEXTAUTH_SECRET="change-this-to-a-random-secret-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Initial Admin User (created on first run)
ADMIN_EMAIL="admin@eztest.local"
ADMIN_PASSWORD="Admin@123456"
ADMIN_NAME="System Administrator"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="/app/uploads"

# Attachments Feature
# Enable or disable file attachments feature (default: false)
ENABLE_ATTACHMENTS=false

# Database Seeding
SEED_DATABASE=true

# Email Service Configuration
# Enable or disable email functionality (set to true to enable email sending)
ENABLE_SMTP=false

# Configure SMTP for password reset emails and notifications
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-smtp-password"
